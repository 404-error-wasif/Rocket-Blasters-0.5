<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600" prefWidth="800" style="-fx-background-color: #0b1220;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.invaders.rocketblasters.GameController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="24" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="scoreLabel" text="Score: 0" textFill="white"><font><Font name="Showcard Gothic" size="30.0" /></font></Label>
                <Label fx:id="livesLabel" text="Lives: 3" textFill="white"><font><Font name="Snap ITC" size="30.0" /></font></Label>
                <Label fx:id="bestLabel" text="Best: 0" textFill="lightgreen"><font><Font name="Showcard Gothic" size="30.0" /></font></Label>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="restartBtn" focusTraversable="false" onAction="#onRestart" text="Restart (Enter)" textFill="RED">
               <font>
                  <Font name="Showcard Gothic" size="17.0" />
               </font></Button>
                <Button focusTraversable="false" onAction="#onBackToMenu" text="Menu (Esc)" textFill="#4c42ff">
               <font>
                  <Font name="Snap ITC" size="19.0" />
               </font></Button>

            </children>
            <padding><Insets bottom="8" left="12" right="12" top="8" /></padding>
        </HBox>
    </top>
    <center>
        <StackPane fx:id="centerPane"> <children>
            <Canvas fx:id="canvas" />
        </children>
        </StackPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="16" BorderPane.alignment="CENTER">
            <children>
                <Label text="A/← &amp; D/→ move • SPACE shoot • ENTER restart • ESC menu" textFill="lightgray">
               <font>
                  <Font name="Showcard Gothic" size="12.0" />
               </font></Label>
            </children>
            <padding><Insets bottom="10" top="8" /></padding>
        </HBox>
    </bottom>
</BorderPane>
